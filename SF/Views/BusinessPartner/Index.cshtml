@model IEnumerable<BusinessPartner>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Business Partners</h1>
    <a asp-action="Create" class="btn btn-primary">Add New Partner</a>
</div>

<table id="businessPartnerTable" class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Category</th>
            <th>Entity Type</th>
            <th>Addresses & Contacts</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var partner in Model)
        {
            <tr>
                <td>@partner.Id</td>
                <td>@partner.Name</td>
                <td>@partner.Category</td>
                <td>@partner.EntityType</td>
                <td>
                    <a asp-controller="Address" asp-action="Index" asp-route-partnerId="@partner.Id" class="btn btn-success">Addresses</a>
                    <a asp-controller="Contact" asp-action="AllContactsForPartner" asp-route-partnerId="@partner.Id" class="btn btn-info">Contacts</a>

                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@partner.Id" class="btn btn-warning">Edit</a>
                    <form asp-action="Delete" asp-route-id="@partner.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this partner?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


@section Scripts {
    <script>
        $('#businessPartnerTable').DataTable({
            ajax: {
                url: '/BusinessPartner/GetData',
                type: 'GET',
                dataSrc: 'data'
            },
            columns: [
                { data: 'id' },
                { data: 'name' },
                { data: 'category' },
                { data: 'entityType' },
                {
                    data: 'id',
                    render: function (data) {
                        return `
                            <a href="/Address/Index?partnerId=${data}" class="btn btn-success">Addresses</a>
                            <a href="/Contact/AllContactsForPartner?partnerId=${data}" class="btn btn-info">Contacts</a>
                        `;
                    }
                },
                {
                    data: 'id',
                    render: function (data) {
                        return `
                            <a href="/BusinessPartner/Edit/${data}" class="btn btn-warning">Edit</a>
                            <form asp-action="Delete" asp-route-id="${data}" method="post" class="d-inline">
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this partner?');">Delete</button>
                            </form>
                        `;
                    }
                }
            ]
        });
    </script>
}