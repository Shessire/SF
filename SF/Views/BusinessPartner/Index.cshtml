@model IEnumerable<BusinessPartner>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Business Partners</h1>
    <a asp-action="Create" class="btn btn-primary">Add New Partner</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Category</th>
            <th>Entity Type</th>
            <th>Addresses & Contacts</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var partner in Model)
        {
            <tr>
                <td>@partner.Id</td>
                <td>@partner.Name</td>
                <td>@partner.Category</td>
                <td>@partner.EntityType</td>
                <td>
                    <a asp-controller="Address" asp-action="Index" asp-route-id="@partner.Id" class="btn btn-success">View Addresses</a>
                    <a asp-controller="Contact" asp-action="ListByPartner" asp-route-partnerId="@partner.Id" class="btn btn-info">View Contacts</a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@partner.Id" class="btn btn-warning">Edit</a>
                    <form asp-action="Delete" asp-route-id="@partner.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this partner?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
