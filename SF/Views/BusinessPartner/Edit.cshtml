@model BusinessPartner

<h2>Edit Business Partner</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input asp-for="Id" type="hidden" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Category"></label>
        <select asp-for="Category" class="form-control">
            <option value="Customer" selected="@Model.Category == " Customer"">Customer</option>
            <option value="Supplier" selected="@Model.Category == " Supplier"">Supplier</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="EntityType"></label>
        <select asp-for="EntityType" class="form-control">
            <option value="Corporate" selected="@Model.EntityType == " Corporate"">Corporate</option>
            <option value="Individual" selected="@Model.EntityType == " Individual"">Individual</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
