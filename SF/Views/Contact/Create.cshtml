@model SF.Models.Contact

<h2>Create Contact</h2>

<p>
    <strong>Business Partner:</strong> @ViewData["BusinessPartnerName"]
</p>
<p>
    <strong>Address:</strong> @ViewData["Address"]
</p>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <!-- Title Dropdown -->
    <div class="form-group">
        <label asp-for="Title"></label>
        <select asp-for="Title" class="form-control" required>
            <option value="" disabled selected>--- Select title ---</option>
            <option value="Mr.">Mr.</option>
            <option value="Ms.">Ms.</option>
            <option value="Mrs.">Mrs.</option>
        </select>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <!-- Name -->
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <!-- Tel -->
    <div class="form-group">
        <label asp-for="Tel"></label>
        <input asp-for="Tel" class="form-control" />
        <span asp-validation-for="Tel" class="text-danger"></span>
    </div>

    <!-- Mobile -->
    <div class="form-group">
        <label asp-for="Mobile"></label>
        <input asp-for="Mobile" class="form-control" />
        <span asp-validation-for="Mobile" class="text-danger"></span>
    </div>

    <!-- Email -->
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <!-- Hidden AddressId -->
    <input type="hidden" asp-for="AddressId" />

    <!-- Buttons -->
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" asp-route-addressId="@Model.AddressId" class="btn btn-secondary">Cancel</a>
</form>
