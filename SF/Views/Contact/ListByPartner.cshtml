@using SF.ViewModel
@model ContactListViewModel

<h2>Contacts for @Model.BusinessPartnerName</h2>

@foreach (var addressGroup in Model.ContactsGroupedByAddress)
{
    <h4>Address: @addressGroup.Key</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Contact Name</th>
                <th>Title</th>
                <th>Tel</th>
                <th>Mobile</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var contact in addressGroup.Value)
            {
                <tr>
                    <td>@contact.ContactName</td>
                    <td>@contact.Title</td>
                    <td>@contact.Tel</td>
                    <td>@contact.Mobile</td>
                    <td>@contact.Email</td>
                </tr>
            }
        </tbody>
    </table>
}
