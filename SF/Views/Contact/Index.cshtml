@model SF.ViewModel.ContactListViewModel

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2>Business Partner: @Model.BusinessPartnerName</h2>
        <h4>Address Name: @Model.AddressName</h4>
    </div>
    <a asp-action="Create" asp-route-addressId="@ViewData["AddressId"]" class="btn btn-primary">Add New Contact</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Name</th>
            <th>Tel</th>
            <th>Mobile</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model.Contacts)
        {
            <tr>
                <td>@contact.Title</td>
                <td>@contact.Name</td>
                <td>@contact.Tel</td>
                <td>@contact.Mobile</td>
                <td>@contact.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@contact.Id" class="btn btn-md btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@contact.Id" class="btn btn-md btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" asp-controller="Address" asp-route-partnerId="@Model.BusinessPartnerId" class="btn btn-secondary">Back to Address</a>


