@model SF.Models.WITCategory

@{
    ViewData["Title"] = "Delete WIT Category";
}

<h2>Delete WIT Category</h2>

<h3>Are you sure you want to delete this category?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Code</dt>
        <dd class="col-sm-10">@Model.Code</dd>

        <dt class="col-sm-2">Detail</dt>
        <dd class="col-sm-10">@Model.Detail</dd>

        <dt class="col-sm-2">Group Code</dt>
        <dd class="col-sm-10">@Model.GroupCode</dd>
    </dl>

    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
