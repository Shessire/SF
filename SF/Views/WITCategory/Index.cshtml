<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>WIT Category</h1>
    <a asp-action="Create" class="btn btn-primary">Add New</a>
</div>

<table id="witTable" class="table table-striped">
    <thead>
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th>Detail</th>
            <th>Group Code</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#witTable').DataTable({
                ajax: {
                    url: "/WITCategory/GetData",
                    type: "GET"
                },
                columns: [
                    { data: 'code' },
                    { data: 'name' },
                    { data: 'detail' },
                    { data : 'groupCode'},
                    {
                        data: 'id',
                        render: function (data) {
                            return `
                                        <a href="/WITCategory/Edit/${data}" class="btn btn-warning">Edit</a>
                                        <form asp-action="Delete" asp - route - id="${data}" method = "post" class= "d-inline" >
                                            <button type="submit" class= "btn btn-danger" onclick = "return confirm('Are you sure you want to delete this item?');" > Delete </button>
                                        </form>
                            `;
                        }
                    }
                ]
            })
        })
    </script>
}