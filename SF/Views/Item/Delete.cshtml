@model SF.Models.Item

@{
    ViewData["Title"] = "Delete Item";
}

<h2>Delete Item</h2>

<h3>Are you sure you want to delete this item?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">GPSC</dt>
        <dd class="col-sm-10">@Model.GPSC</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Base UOM ID</dt>
        <dd class="col-sm-10">@Model.BaseUOMId</dd>

        <dt class="col-sm-2">Type</dt>
        <dd class="col-sm-10">@Model.Type</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>

        <dt class="col-sm-2">Cost</dt>
        <dd class="col-sm-10">@Model.Cost</dd>
    </dl>

    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
