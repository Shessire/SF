@{
    ViewData["Title"] = "Items";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Items</h1>
    <a asp-action="Create" class="btn btn-primary">Add New Item</a>
</div>

<table id="itemsTable" class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Category</th>
            <th>Price</th>
            <th>Cost</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#itemsTable').DataTable({
                ajax: {
                    url: '/Item/GetData',
                    type: 'GET'
                },
                columns: [
                    { data: 'name' },
                    { data: 'type' },
                    { data: 'category' },
                    { data: 'price' },
                    { data: 'cost' },
                    {
                        data: 'id',
                        render: function (data) {
                            return `
                                        <a href="/Item/Edit/${data}" class="btn btn-warning">Edit</a>
                                        <a href="/Item/Delete/${data}" class="btn btn-danger">Delete</a>`;
                        }
                    }
                ]
            });
        });
    </script>
}
