@using SF.ViewModel
@model RoleGroupEditViewModel

<h2>Edit Role Group</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()

    <input asp-for="Id" type="hidden" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Select Roles</label>
        @foreach (var role in Model.AvailableRoles)
        {
            <div class="form-check">
                <input type="checkbox" name="SelectedRoles" value="@role.RoleName" class="form-check-input" @(role.IsSelected ? "checked" : "") />
                <label class="form-check-label">@role.RoleName</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
