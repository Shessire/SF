@model IEnumerable<RoleGroup>

<h2>Role Groups</h2>

<a asp-action="Create" class="btn btn-primary">Create New Role Group</a>

<table class="table">
    <thead>
        <tr>
            <th>Group Name</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var group in Model)
        {
            <tr>
                <td>@group.Name</td>
                <td>@string.Join(", ", group.RoleGroupRoles.Select(r => r.RoleName))</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@group.Id" class="btn btn-warning">Edit</a>
                    <form asp-action="Delete" asp-route-id="@group.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this role group?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
