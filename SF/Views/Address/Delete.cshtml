@model Address

<h2>Delete Address</h2>
<p>Are you sure you want to delete this address?</p>

<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.AddressPri</dd>
        <dt class="col-sm-2">Postal Code</dt>
        <dd class="col-sm-10">@Model.PostalCode</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" asp-route-partnerId="@Model.BusinessPartnerId" class="btn btn-secondary">Cancel</a>
</form>
